<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <Version>9.0.4</Version>
        <Authors>Pierre Van Wallendael</Authors>
        <PackageReleaseNotes>now supporting multi row named configs</PackageReleaseNotes>
        <PackageReadmeFile>readme.md</PackageReadmeFile>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <RepositoryType>GitHub</RepositoryType>
        <RepositoryBranch>main</RepositoryBranch>
        <PackageProjectUrl>https://github.com/licheez/pvWayNugs.git</PackageProjectUrl>
        <RepositoryUrl>https://github.com/licheez/pvWayNugs.git</RepositoryUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <Copyright>pvWay Ltd</Copyright>
        <PackageIcon>pvwayLogoTextLess256.png</PackageIcon>
        <PackageTags>PostgreSQL ConnectionString Provider Database PgSql Npgsql ConnectionManagement SecretManager DynamicCredentials StaticSecrets RoleBasedAccess DatabaseSecurity Configuration Caching ThreadSafe Async NET9 pvWayNugs</PackageTags>
        <Description>
          Secure, production-ready PostgreSQL connection string provider for .NET 9.0+ with advanced credential management, role-based access, and automatic secret rotation.
        </Description>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="9.0.9" />
        <PackageReference Include="pvNugsCsProviderNc9Abstractions" Version="9.0.3" />
        <PackageReference Include="pvNugsLoggerNc9Abstractions" Version="9.1.3" />
        <PackageReference Include="pvNugsSecretManagerNc9Abstractions" Version="9.0.0"/>
    </ItemGroup>

    <ItemGroup>
        <None Update="bin/$(Configuration)\$(TargetFramework)\$(AssemblyName).xml">
            <Pack>true</Pack>
            <PackagePath>lib\$(TargetFramework)</PackagePath>
        </None>
        <None Update="pvwayLogoTextLess256.png">
            <Pack>True</Pack>
            <PackagePath>/</PackagePath>
        </None>
        <None Update="readme.md">
          <Pack>true</Pack>
          <PackagePath>\</PackagePath>
        </None>
    </ItemGroup>

</Project>
