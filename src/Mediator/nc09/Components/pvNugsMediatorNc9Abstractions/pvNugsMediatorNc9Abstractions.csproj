<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <Version>9.0.3</Version>
        <Authors>Pierre Van Wallendael</Authors>
        <Description>Lightweight mediator pattern abstractions for .NET 9 providing request/response and publish/subscribe messaging with pipeline behaviors for cross-cutting concerns. Includes handler introspection for diagnostics and three discovery modes (Manual, Decorated, FullScan) for flexible handler registration. Supports CQRS, clean architecture, and testable designs with comprehensive XML documentation.</Description>
        <PackageReleaseNotes>v9.0.2: Added discovery modes (Manual, Decorated, FullScan) for flexible handler registration strategies. Added MediatorHandlerAttribute for attribute-based discovery. Added ServiceLifetime enum for per-handler lifetime control. Previous: v9.0.1 added handler introspection (GetRegisteredHandlers) and enhanced XML documentation across all interfaces.</PackageReleaseNotes>
        <PackageReadmeFile>readme.md</PackageReadmeFile>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <RepositoryType>GitHub</RepositoryType>
        <RepositoryBranch>main</RepositoryBranch>
        <PackageProjectUrl>https://github.com/licheez/pvWayNugs.git</PackageProjectUrl>
        <RepositoryUrl>https://github.com/licheez/pvWayNugs.git</RepositoryUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <Copyright>pvWay Ltd</Copyright>
        <PackageTags>mediator;cqrs;command-query;messaging;pipeline;publish-subscribe;request-response;clean-architecture;domain-driven-design;ddd;abstractions;dependency-injection;async;dotnet9;introspection;diagnostics;health-checks;handler-discovery;discovery-modes;attribute-based;reflection;auto-registration</PackageTags>
        <PackageIcon>pvwayLogoTextLess256.png</PackageIcon>
    </PropertyGroup>

    <ItemGroup>
        <None Include="readme.md" Pack="true" PackagePath="\"/>
        <None Update="bin/$(Configuration)\$(TargetFramework)\$(AssemblyName).xml" >
            <Pack>true</Pack>
            <PackagePath>lib\$(TargetFramework)</PackagePath>
        </None>
      <None Update="pvwayLogoTextLess256.png">
        <Pack>True</Pack>
        <PackagePath>/</PackagePath>
      </None>
    </ItemGroup>

</Project>
